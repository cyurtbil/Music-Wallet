<html>
<head>
	<title>MusicWallet</title>
</head>
<body>
	
	<% if user_signed_in? %>

		<h1>MusicWallet</h1>
			<p>Signed in as <%= current_user.username %> </p>
		<header>
			<nav>	
				<%= link_to 'Home', root_path %>
				<%= link_to 'Profile', user_path(current_user) %>
			</nav>
		</header>

		<h2>Top 10 Tracks</h2>

		<% @tracks.each do |track| %>
  			<p><%= link_to track.permalink_url, track.permalink_url %></p>
		<% end %>

	<% else %>
		<%= link_to "Connect with Soundcloud", user_omniauth_authorize_path(:soundcloud) %>
	<% end %>
	
</body>
</html>