

<section class="content">
		<%= form_tag '/songs', method: "get" do %>
			<%= text_field_tag(:q) %>
			<%= submit_tag 'Search', class: 'actions' %>
		<% end %>
		<hr>
		<% @songs.each do |song| %>

			<iframe width="100%" height="400" scrolling="no" frameborder="no" src="https://w.soundcloud.	com/player/?visual=true&url=https%3A%2F%2Fapi.soundcloud.com%2Ftracks%2F<%= song.id %>&show_artwork=tru&client_id=3e664ddb00dc36cccd7244884f13749d"></iframe>
			<br>
			<%= form_for @song do |f| %>
				<%= f.hidden_field :track_id, value: song.id %>
				<%= f.collection_radio_buttons :wallet_id, Wallet.all, :id, :name %>
				<%= f.submit 'Add', class: 'actions' %>
			<% end %>
			<hr>
		<% end %>
</section>