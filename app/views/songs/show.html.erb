<html>
<head>
	<title>MusicWallet</title>
</head>
<body>	
	<header>
		<nav>	
			<%= link_to 'Home', root_path %>
			<%= link_to 'Profile', user_path(current_user) %>
		</nav>
	</header>
	<p><strong>Search: </strong></p>
	<%= render 'form' %>

	<hr>
	<% @songs.each do |song| %>

		<iframe width="100%" height="400" scrolling="no" frameborder="no" src="https://w.soundcloud.com/player/?visual=true&url=https%3A%2F%2Fapi.soundcloud.com%2Ftracks%2F<%= song.id %>&show_artwork=true&client_id=3e664ddb00dc36cccd7244884f13749d"></iframe>
		<br>
			<%= form_for @song do |f| %>
				<%= f.collection_check_boxes :wallet_id, Wallet.all, :id, :name %>
				<%= f.submit 'Pick' %>
			<% end %>
		<hr>
	<% end %>
</body>
</html>
